
<%= simple_form_for(@campain) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: "שם הגיוס", error: 'חובה למלא שם' %>
    <%= f.input :year, label: "תאריך התחלה משוער" %>
    <%= f.input :script, label: "תסריט שיחה" %>
    <%= f.input :notes, label: "הערות" %>
    <%= f.association :ken, label: "קן שמגייסים אליו" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "שליחה", class: "btn btn-primary" %>
  </div>
<% end %>
