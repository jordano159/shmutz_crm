<p style="color: green"><%= notice %></p>

<div id="campains" class="container">
  <h1 class="my-4">גיוסים</h1>
  <div class="row">
    <% @campains.each do |campain| %>
      <div class="col-md-4 mb-4" id="<%= dom_id campain %>">
        <div class="card">
          <%= render campain %>
          <%= link_to "כניסה לגיוס", campain_path(campain), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "יצירת גיוס חדש", new_campain_path %>

  
